<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${var:appdir}/../../Logs/InternalLogs.txt">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>
    <variable name="appdir" value="${basedir}" />

    <targets>
        <target xsi:type="File" name="allfile" fileName="${var:appdir}/../../Logs/UserService-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

        <target xsi:type="File" name="ownFile-web" fileName="${var:appdir}/../../Logs/UserService-Own-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

        <target xsi:type="File" name="File-web-Errors" fileName="${var:appdir}/../../Logs/UserService-Errors-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

        <target xsi:type="File" name="File-own-web-Errors" fileName="${var:appdir}/../../Logs/UserService-Own-Errors-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

        <target xsi:type="Console" name="console" />
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="allfile" />
        <logger name="*" minlevel="Warning" writeTo="File-web-Errors" />
        <logger name="*" minlevel="Trace" writeTo="console" />

        <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="console" final="true" />
        <logger name="Microsoft.Hosting.Lifetime" minlevel="Warning" writeTo="File-own-web-Errors" final="true" />

        <logger name="Microsoft.*" maxlevel="Info" final="true" />
        <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

        <logger name="*" minlevel="Trace" writeTo="ownFile-web" />
    </rules>
</nlog>